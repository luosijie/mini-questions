<template>
  <view class="main" wx:if="{{ detail }}">
    <view class="card">
      <view class="title">“ {{ detail.title }} ”</view>
      <view class="from">
        <image src="{{ detail.creator.avatarUrl }}"></image> {{ detail.creator.nickName }}
      </view>
      <view class="info">
        <view class="date">
          {{ detail.createTime }}
        </view>
        <view class="num">
          10人参与
        </view>
      </view>
    </view>
    <view class="action">
      <view class="share">邀请回答</view>
      <view class="detail" bindtap="toCards">查看详情</view>
    </view>
  </view>
</template>

<script>
  import { createPage } from '@mpxjs/core'
  createPage({
    data: {
      detail: null
    },
    onLoad (params) {
      this.getDetail(params._id)
      // this.getList()
    },
    onPullDownRefresh () {
      console.log('下拉刷新')
      this.no = 1
      this.getList()
    },
    onReachBottom () {
      console.log('上拉触底')
      if (this.total > this.list.length) {
        this.no++
        this.getList()
      }
    },
    methods: {
      async getDetail (_id) {
        const res = await wx.cloud.callFunction({
          name: 'questionInfo',
          data: {
            _id
          }
        })
        this.detail = res.result.data
        wx.setNavigationBarTitle({
          title: this.detail.title
        })
      },
      toCards () {
        wx.navigateTo({
          url: `detail-cards?_id=${this.detail._id}`
        })
      }
    }
  })
</script>

<script type="application/json">
  {
    "navigationBarTitleText": "详情",
    "navigationBarBackgroundColor": "#40A9FF",
    "enablePullDownRefresh": true,
    "usingComponents": {}
  }
</script>
